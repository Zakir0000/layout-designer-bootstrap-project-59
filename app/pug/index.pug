-
  const url = "index"

  const active = {
    contacts: ["show active"],
    chats: null
  }


doctype html
html.h-100(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title hexlet chat | Zakir Khunkaev
    link(rel='stylesheet', href='css/style.min.css')

  body.bg-custom.p-md-4
    .bigbox-xxl-1540px.container-xxl.rounded-md-4.h-100.overflow-hidden.bg-white 
      .row.h-100
        aside.p-0.col-sm-12.col-md-7.col-lg-6.col-xl-5.col-xxl-4.border-end.h-100
          .tab-content.h-100.d-flex.flex-column
            include header/header.pug
            section.tab-pane.fade.pt-5.h-100.scrollable-component#contacts(class= active.contacts role="tabpanel" tabindex="0")
              include left_area/contact.pug
            section.tab-pane.fade.pt-5.px-3.h-100#chats(class= active.chats role="tabpanel" aria-labelledby="chats-tab" tabindex="0")
              include left_area/chats.pug
            section.tab-pane.fade.pt-5.h-100#profile(class= active.profile role="tabpanel" aria-labelledby="profile-tab" tabindex="0")
              include left_area/profile.pug
        main.col.image-center.d-none.d-md-flex.p-0
          include right_area/avatar_page.pug
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        
