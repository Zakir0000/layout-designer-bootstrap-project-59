-
  const url = "chat"

  const active = {
    contacts: ["show active"],
    chats: null
  }


doctype html
html.h-100(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title hexlet chat | Zakir Khunkaev
    link(rel='stylesheet', href='css/style.min.css')

  body.bg-custom.p-md-4.h-100
    .bigbox-xxl-1540px.container-xxl.rounded-md-4.h-100.overflow-hidden
      .row.bg-white.h-100
        aside.col.col-md-7.col-lg-6.col-xl-5.col-xxl-4.border-end.h-100.scrollable-component.sidebar.d-flex.justify-content-end.flex-column.p-0
          include header/header-chat.pug
          .tab-content.d-md-flex.flex-column.scrollable-component.h-100
            section.tab-pane.fade.pt-5.h-100#contacts(class= active.contacts role="tabpanel" aria-labelledly="contacts-tab" tabindex="0")
              include left_area/contact.pug
            section.tab-pane.fade.pt-5.h-100#chats(class= active.chats role="tabpanel" aria-labelledby="chats-tab" tabindex="0")
              include left_area/chats.pug
            section.tab-pane.fade.pt-5.h-100#profile(class= active.profile role="tabpanel" aria-labelledby="profile-tab" tabindex="0")
              include left_area/profile.pug
            main.col.d-md-none.flex-column.h-100.p-0#current-chat
              header.d-flex.align-items-center.border-bottom.me-dm-4
                img.ms-3.me-4.rounded-circle(src="./assets/images/avatar_4.jpg" alt="avatar_4" width="50" height="50")
                .py-4
                  p.fw-bold.text-dark.mb-0 Вениамин Редакторович
                  p.small.mb-0.text-secondary Онлайн
              include right_area/desktop-chat.pug
            
        main.col.d-none.d-md-flex.flex-column.p-0.h-100#current-chat
          header.d-flex.align-items-center.border-bottom.me-dm-4
            img.ms-3.me-4.rounded-circle(src="./assets/images/avatar_4.jpg" alt="avatar_4" width="50" height="50")
            .py-4
              p.fw-bold.text-dark.mb-0 Вениамин Редакторович
              p.small.mb-0.text-secondary Онлайн
          include right_area/desktop-chat.pug

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")